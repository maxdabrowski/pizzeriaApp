  if(type==='changePizza')
    div.modal#formPizza
    a(href=`/manager/menu_manage/pizza`) x
    form(method='post')
      div.formPizza
        label Nazwa: 
        input(type='text', placeholder='Nazwa pizzy' name='name' value=data.name)
      div.formPizza
        label Rozmiary(średnice w cm): 
        input(type='text', placeholder='mała' name='size1' value=data.size[0])
        input(type='text', placeholder='średnia' name='size2' value=data.size[1])
        input(type='text', placeholder='duża' name='size3' value=data.size[2])
      div.formPizza
        label Ceny (w złotówkach): 
        input(type='text', placeholder='mała' name='price1' value=data.price[0])
        input(type='text', placeholder='średnia' name='price2' value=data.price[1])
        input(type='text', placeholder='duża' name='proce3' value=data.price[2])
      div.formPizza
        label 'Składniki(możesz dodać do 5 składników)': 
        input(type='text', placeholder='1' name='ingr1' value=data.ingredients[0])
        input(type='text', placeholder='2' name='ingr2' value=data.ingredients[1])
        input(type='text', placeholder='3' name='ingr3' value=data.ingredients[2])
        input(type='text', placeholder='4' name='ingr4' value=data.ingredients[3])
        input(type='text', placeholder='5' name='ingr5' value=data.ingredients[4]) 
      div.formPizza
        label Dodaj adres URL zdjęcia: 
        input(type='text', placeholder='adres URL' name='imgURL' value=data.image)
      button(type='submit') zmień

  if(type==='addDrink')
    div.modal#formDrink
    a(href=`/manager/menu_manage/drink`) x
