        input(type='text', placeholder='mały' name='size1')
        input(type='text', placeholder='duży' name='size2')

      div.formDrink
        label Ceny (w złotówkach): 
        input(type='text', placeholder='mały' name='price1')
        input(type='text', placeholder='duży' name='price2')
      div.formDrink
        label Dodaj adres URL zdjęcia: 
        input(type='text', placeholder='adres URL' name='imgURL')
      div.formDrink
      button(type='submit') dodaj
    
 
  
  
  
